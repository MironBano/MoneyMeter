<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/CIScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/StartPoint"
                android:layout_width="13dp"
                android:layout_height="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                />
            
            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/mainBarrier"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:barrierDirection="end"
                app:constraint_referenced_ids="StartPoint"
                />


            <TextView
                android:id="@+id/text1"

                app:layout_constraintStart_toEndOf="@id/mainBarrier"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="13dp"

                style="@style/TextPrimary"
                android:text="@string/initialAmount"
                />

            <EditText
                android:id="@+id/InitAmount"

                app:layout_constraintStart_toEndOf="@id/mainBarrier"
                app:layout_constraintTop_toBottomOf="@id/text1"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="48dp"

                style="@style/TextSecondary"
                android:background="@drawable/edittext_form"
                android:cursorVisible="false"
                android:hint="@string/initialAmountHint"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="20"
                android:textColorHint="@color/white"
                android:textSize="17sp"
                />

            <TextView
                style="@style/TextSecondary"
                android:text="â‚½"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/InitAmount"
                app:layout_constraintStart_toEndOf="@+id/InitAmount"
                app:layout_constraintTop_toTopOf="@+id/InitAmount"
                android:layout_marginStart="7dp"
                />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>