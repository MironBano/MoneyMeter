<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <View
        android:id="@+id/settingsBackView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"

        android:layout_marginEnd="13dp"
        android:background="@drawable/additional_attachments_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/realtimeMarketpriceSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/defaultSpaceVertical"
        android:layout_marginStart="@dimen/defaultSpaceHorizontal"
        android:theme="@style/MySwitch"
        app:layout_constraintStart_toStartOf="@+id/settingsBackView"
        app:layout_constraintTop_toTopOf="@+id/settingsBackView"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        />

    <TextView
        android:id="@+id/realtimeMarketpriceText"

        style="@style/TextSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="@dimen/defaultSpaceHorizontal"

        android:text="@string/realtimeMarketPrice"
        app:layout_constraintBottom_toBottomOf="@+id/realtimeMarketpriceSwitch"
        app:layout_constraintStart_toEndOf="@+id/realtimeMarketpriceSwitch"
        app:layout_constraintTop_toTopOf="@+id/realtimeMarketpriceSwitch" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="50dp"

        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>