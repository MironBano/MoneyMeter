<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.yandex.mobile.ads.banner.BannerAdView
        android:id="@+id/topBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/greetings"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"

        android:layout_marginEnd="13dp"
        android:background="@drawable/additional_attachments_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/greetingsText"

        style="@style/TextPrimary"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"

        android:text="@string/donationAsk"
        app:layout_constraintBottom_toBottomOf="@+id/greetings"
        app:layout_constraintStart_toStartOf="@+id/greetings"
        app:layout_constraintTop_toTopOf="@+id/greetings" />

    <Button
        android:id="@+id/emailButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="13dp"

        android:text="Написать авторам"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetings" />

    <View
        android:id="@+id/emailBack"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"

        android:layout_marginEnd="13dp"
        android:background="@drawable/additional_attachments_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailButton" />

    <TextView
        android:id="@+id/emailText"

        style="@style/TextPrimary"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"

        android:text="@string/emailText"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="@+id/emailBack"
        app:layout_constraintStart_toStartOf="@+id/emailBack"
        app:layout_constraintTop_toTopOf="@+id/emailBack" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/emailGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="emailBack,emailText"/>

    <Button
        android:id="@+id/donatButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"

        android:text="Донат"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailBack" />

    <View
        android:id="@+id/donatBack"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"

        android:layout_marginEnd="13dp"
        android:background="@drawable/additional_attachments_form"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donatButton" />

    <TextView
        android:id="@+id/donatText"

        style="@style/TextPrimary"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"

        android:text="@string/donatRequisites"
        android:textIsSelectable="true"

        app:layout_constraintBottom_toBottomOf="@+id/donatBack"
        app:layout_constraintStart_toStartOf="@+id/donatBack"
        app:layout_constraintTop_toTopOf="@+id/donatBack" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/donatGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="donatBack,donatText"/>

    <Button
        android:id="@+id/feedbackButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"

        android:text="Оставить отзыв"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donatBack" />


</androidx.constraintlayout.widget.ConstraintLayout>