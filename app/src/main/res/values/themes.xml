<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneyMeter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorOnBackground">@color/dark_grey</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextView"> <!-- Текст на главном экране -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="TextPrimary"> <!-- Подписи -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextCommon"> <!-- Подписи -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>


    <style name="TextSecondary"> <!-- Текст в окнах заполнения -->

        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/bright_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ButtonPrimary"> <!-- Selected Button -->
        <item name="android:background">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/bright_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- неактивное состояние ползунка -->
        <item name="colorSwitchThumbNormal">@color/white</item>

        <!-- активное состояние ползунка -->
        <item name="colorControlActivated">@color/yellow</item>

        <!-- цвет дорожки для неактивного (активного тоже!?) состояния (50% прозрачности)  -->
        <item name="android:colorForeground">@color/transparent_yellow</item>


    </style>

</resources>